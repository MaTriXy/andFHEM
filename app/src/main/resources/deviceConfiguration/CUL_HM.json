{
  "defaultGroup": "UNKNOWN",
  "sensorDevice": true,
  "delayForUpdateAfterCommand": 2,
  "supportedWidgets": [
    "TemperatureWidgetView"
  ],
  "states": [
    {
      "key": "CommandAccepted",
      "desc": "commandAccepted",
      "showInOverview": false
    },
    {
      "key": "controlMode",
      "desc": "mode",
      "showInOverview": false
    },
    {
      "key": "desired-temp",
      "desc": "desiredTemperature",
      "showInOverview": true,
      "beforeCommandReplace": [
        {
          "search": "4.5",
          "replaceBy": "off"
        },
        {
          "search": "30.5",
          "replaceBy": "on"
        }
      ]
    },
    {
      "key": "measured-temp",
      "desc": "temperature",
      "showInOverview": true,
      "markers": [
        "WidgetTemperatureField"
      ]
    },
    {
      "key": "temperature",
      "desc": "temperature",
      "showInOverview": true,
      "markers": [
        "WidgetTemperatureField"
      ]
    },
    {
      "key": "humidity",
      "desc": "humidity",
      "showInOverview": true,
      "markers": [
        "WidgetTemperatureAdditionalField"
      ]
    },
    {
      "key": "ValvePosition",
      "desc": "actuator",
      "showInOverview": true
    },
    {
      "key": "battery",
      "desc": "battery",
      "showInOverview": false
    },
    {
      "key": "content",
      "desc": "content",
      "showInOverview": true
    },
    {
      "key": "brightness",
      "desc": "brightness",
      "showInOverview": true
    },
    {
      "key": "luminosity",
      "desc": "brightness",
      "showInOverview": true
    },
    {
      "key": "motion",
      "desc": "motion",
      "showInOverview": true
    },
    {
      "key": "windSpeed",
      "desc": "windSpeed",
      "showInOverview": false
    },
    {
      "key": "windDirection",
      "desc": "windDirection",
      "showInOverview": false
    },
    {
      "key": "sunshine",
      "desc": "sunshine",
      "showInOverview": false
    },
    {
      "key": "isRaining",
      "desc": "isRaining",
      "showInOverview": false
    },
    {
      "key": "rain",
      "desc": "rain",
      "showInOverview": false
    },
    {
      "key": "power",
      "desc": "currentPower",
      "showInOverview": false
    },
    {
      "key": "voltage",
      "desc": "voltage",
      "showInOverview": false
    },
    {
      "key": "energy",
      "desc": "energy",
      "showInOverview": true
    },
    {
      "key": "batVoltage",
      "desc": "batteryVoltage",
      "showInOverview": false
    },
    {
      "key": "pressure",
      "desc": "pressure",
      "showInOverview": false
    },
    {
      "key": "pressure-nn",
      "desc": "pressureNN",
      "showInOverview": false
    },
    {
      "key": "frequency",
      "desc": "energy_frequency",
      "showInOverview": false
    },
    {
      "key": "current",
      "desc": "current",
      "showInOverview": false
    },
    {
      "key": "lock",
      "desc": "lock",
      "showInOverview": true
    },
    {
      "key": "rain_d_curr",
      "desc": "rainToday"
    },
    {
      "key": "rain_d_last",
      "desc": "rainYesterday"
    }
  ],
  "attributes": [
    {
      "key": "subType",
      "desc": "type"
    }
  ],
  "sanitise": {
    "deviceValues": {
      "STATE": {
        "replaceAll": [
          {
            "search": "^([0-9\\.]+) ([^0-9]+)",
            "replaceBy": "$1 ($2)"
          }
        ]
      },
      "power": {
        "append": "W",
        "extract": "double"
      },
      "frequency": {
        "append": "Hz",
        "extract": "double"
      },
      "current": {
        "append": "mA",
        "extract": "double"
      },
      "luminosity": {
        "append": "lm",
        "extract": "double"
      },
      "rain": {
        "append": "l/m²",
        "extract": "double"
      },
      "rain_d_last": {
        "append": "l/m²",
        "extract": "double"
      },
      "rain_d_curr": {
        "append": "l/m²",
        "extract": "double"
      },
      "actuator": {
        "append": "%",
        "extract": "int"
      },
      "batVoltage": {
        "append": "V",
        "extract": "double"
      },
      "windDirection": {
        "append": "°",
        "extract": "int"
      },
      "windSpeed": {
        "append": "m/s",
        "extract": "double"
      },
      "energy": {
        "extract": "double",
        "extractDivideBy": 1000,
        "append": "kWh"
      },
      "content": {
        "append": "l",
        "extract": "double"
      },
      "sets": {
        "replaceAll": [
          {
            "search": "on,off,[^ ]+",
            "replaceBy": "slider,4.5,0.5,30.5"
          },
          {
            "search": "on-till ",
            "replaceBy": "on-till:time "
          },
          {
            "search": "off-till ",
            "replaceBy": "off-till:time "
          }
        ]
      },
      "desired-temp": {
        "append": "°C",
        "extract": "double",
        "replaceAll": [
          {
            "search": "on",
            "replaceBy": "30.5"
          },
          {
            "search": "off",
            "replaceBy": "4.5"
          }
        ]
      }
    }
  }
}